
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h3><a href="@Url.Action("PackageCreate", "Package")">Create</a></h3>
<h3><a href="@Url.Action("Logout", "PALogin")">Logout</a></h3>
<table class="table table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Promo Code</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.PName</td>
                <td>@p.PPrice</td>
                <td>@p.PDesc</td>
                <td>@p.PCode</td>
                <td><a href="@Url.Action("PackageEdit", "Package", new { id = p.PId })">Edit</a></td>
                <td><a href="@Url.Action("PackageDelete", "Package", new { id = p.PId })">Delete</a></td>

            </tr>
        }
    </tbody>
</table>